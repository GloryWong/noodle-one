{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "packageRules": [
    {
      "packagePatterns": [
        "*"
      ],
      "depTypeList": [
        "dependencies",
        "devDependencies"
      ],
      "groupName": "minor and patch updates",
      "updateTypes": [
        "minor",
        "patch"
      ]
    },
    {
      "packagePatterns": [
        "*"
      ],
      "depTypeList": [
        "dependencies",
        "devDependencies"
      ],
      "groupName": "major updates",
      "updateTypes": [
        "major"
      ]
    }
  ]
}
