{
  "name": "@gloxy/templates",
  "type": "module",
  "version": "2.4.0",
  "description": "Apply part templates",
  "author": "glorywong1001@gmail.com",
  "license": "MIT",
  "homepage": "https://github.com/GloryWong/templates#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/GloryWong/templates.git"
  },
  "bugs": {
    "url": "https://github.com/GloryWong/templates/issues"
  },
  "keywords": [
    "template",
    "starter",
    "project",
    "node",
    "typescript",
    "cli",
    "command"
  ],
  "main": "./dist",
  "types": "./dist",
  "bin": {
    "tmpl": "./dist/cli.js"
  },
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=20.16.0"
  },
  "scripts": {
    "build": "rimraf dist && tsc && copyfiles -u 1 src/utils/git-exclude-patterns dist",
    "prepare": "pnpm simple-git-hooks",
    "prepublishOnly": "pnpm test && pnpm build",
    "lint": "eslint .",
    "lint:fix": "pnpm lint --fix",
    "test": "vitest run",
    "test:watch": "vitest",
    "coverage": "vitest run --coverage.enabled"
  },
  "dependencies": {
    "@gloxy/logger": "^2.2.2",
    "@inquirer/prompts": "^5.3.8",
    "@types/fs-extra": "^11.0.4",
    "@types/picomatch": "^3.0.1",
    "@types/semver": "^7.5.8",
    "chalk": "^5.3.0",
    "commander": "^12.1.0",
    "deepmerge": "^4.3.1",
    "fs-extra": "^11.2.0",
    "giget": "^1.2.3",
    "iso-timestamp": "^1.1.0",
    "ora": "^8.0.1",
    "picomatch": "^4.0.2",
    "read-pkg": "^9.0.1",
    "readdirp": "^3.6.0",
    "semver": "^7.6.3",
    "type-fest": "^4.24.0",
    "write-package": "^7.1.0"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^2.25.0",
    "@commitlint/cli": "^19.4.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@tsconfig/node20": "^20.1.4",
    "@types/jest": "^29.5.12",
    "@types/mock-fs": "^4.13.4",
    "@types/node": "^20.14.15",
    "@vitest/coverage-istanbul": "^2.0.5",
    "copyfiles": "^2.4.1",
    "eslint": "^9.8.0",
    "lint-staged": "^15.2.8",
    "mock-fs": "^5.2.0",
    "rimraf": "^6.0.1",
    "simple-git-hooks": "^2.11.1",
    "tsx": "^4.17.0",
    "typescript": "^5.5.4",
    "vitest": "^2.0.5"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged",
    "commit-msg": "pnpm commitlint --edit ${1}"
  },
  "lint-staged": {
    "*": "pnpm lint:fix"
  }
}
