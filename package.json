{
  "name": "@gloxy/templates",
  "type": "module",
  "version": "1.7.1",
  "description": "Apply part templates",
  "author": "glorywong1001@gmail.com",
  "license": "MIT",
  "homepage": "https://github.com/GloryWong/templates#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/GloryWong/templates.git"
  },
  "bugs": {
    "url": "https://github.com/GloryWong/templates/issues"
  },
  "keywords": [
    "template",
    "starter",
    "project",
    "node",
    "typescript",
    "cli",
    "command"
  ],
  "main": "./dist",
  "types": "./dist",
  "bin": {
    "tmpl": "./dist/cli.js"
  },
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "build": "rimraf dist && tsc && copyfiles -u 1 src/utils/git-exclude-patterns dist",
    "prepare": "pnpm simple-git-hooks",
    "prepublishOnly": "pnpm test && pnpm build",
    "lint": "eslint .",
    "lint:fix": "pnpm lint --fix",
    "test": "vitest run"
  },
  "dependencies": {
    "@gloxy/logger": "^2.2.0",
    "@inquirer/prompts": "^5.1.2",
    "@types/fs-extra": "^11.0.4",
    "chalk": "^5.3.0",
    "commander": "^12.1.0",
    "deepmerge": "^4.3.1",
    "fs-extra": "^11.2.0",
    "giget": "^1.2.3",
    "ora": "^8.0.1",
    "read-pkg": "^9.0.1",
    "type-fest": "^4.21.0",
    "write-package": "^7.0.1"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^2.22.0",
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@tsconfig/node20": "^20.1.4",
    "@types/jest": "^29.5.12",
    "@types/mock-fs": "^4.13.4",
    "@types/node": "^20.14.10",
    "copyfiles": "^2.4.1",
    "eslint": "^8.57.0",
    "eslint-plugin-perfectionist": "^2.11.0",
    "lint-staged": "^15.2.7",
    "mock-fs": "^5.2.0",
    "rimraf": "^6.0.1",
    "simple-git-hooks": "^2.11.1",
    "tsx": "^4.16.2",
    "typescript": "^5.5.3",
    "vitest": "^2.0.2"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged",
    "commit-msg": "pnpm commitlint --edit ${1}"
  },
  "lint-staged": {
    "*": "pnpm lint:fix"
  }
}
